@using MvcStok.Models.Entity
@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>MÜŞTERİLER TABLOSU</h2>
<br />

@{
    var searchString = ViewBag.CurrentFilter as string; // Filtre değerini alırız
    var currentPage = ViewBag.CurrentPage as int?; // Geçerli sayfa numarasını alırız
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get)) // Arama formunu oluştururuz
{
    <div class="input-group">
        @Html.TextBox("searchString", searchString, new { @class = "form-control", placeholder = "Müşteri adı veya soyadıyla arayın" })
        <span class="input-group-btn">
            <button type="submit" class="btn btn-primary">Ara</button>
        </span>
    </div>
}

<br />

@if (Model.Count == 0 && !string.IsNullOrEmpty(searchString))  // Eğer bir arama yapılırsa ve aranan müşteri bulunmazsa
{
    <div class="alert alert-danger">
        Aranan müşteri bulunamadı: <strong>@searchString</strong>
        @Html.ActionLink("Tüm müşterileri gör", "Index", "Musteri", null, new { @class = "alert-link text-danger" })

    </div>
}
else if (!string.IsNullOrEmpty(searchString)) // Eğer bir arama yapılırsa ve aranan müşteri bulunursa
{
    <div class="alert alert-info">
        <strong>@searchString</strong>
        @Html.ActionLink("Tüm müşterileri gör", "Index", "Musteri", null, new { @class = "alert-link text-danger" })
    </div>
}

@{
    var isSearchPerformed = !string.IsNullOrEmpty(searchString); // Arama yapıldı mı kontrolü
}

 @if (isSearchPerformed && Model.Count >= 5) // Arama yapıldı ve 5 veya daha fazla sonuç varsa sayfalama işlemini göster
{
    @Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa, searchString }))
}




<br /> <br />
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">MÜŞTERİ ID</th>
            <th scope="col">MÜŞTERİ AD</th>
            <th scope="col">MÜŞTERİ SOYAD</th>
            <th scope="col">SİL</th>
            <th scope="col">GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var musteri in Model)
        {
            <tr>
                <th scope="row">@musteri.MUSTERIID</th>
                <td>@musteri.MUSTERIAD</td>
                <td>@musteri.MUSTERISOYAD</td>
                <td><a href="/MUSTERI/MusteriSil/@musteri.MUSTERIID" class="deleteButton"><i class="fas fa-trash" style="color: red; font-size: 20px;"></i></a></td>
                <td><a href="/MUSTERI/musteriGetir/@musteri.MUSTERIID"><i class="fas fa-pencil-alt" style="color: blue; font-size: 20px;"></i></a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/MUSTERI/YeniMusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))

<!-- Silme Onay Modalı -->
<div id="confirmDeleteModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal içeriği-->
        <div class="modal-content">
            <div class="modal-header" style="background-color: #f2dede; color: #a94442;">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Silme İşlemi Onayı</h4>
            </div>
            <div class="modal-body">
                <p style="color: #a94442;">Seçili müşteriyi silmek istediğinizden emin misiniz?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">İptal</button>
                <a id="deleteConfirmButton" href="#" class="btn btn-danger">Sil</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".deleteButton").click(function (e) {
                e.preventDefault(); // varsayılan tıklama işlemini engelleriz
                var deleteUrl = $(this).attr("href"); // silme işlemi URL'sini alırız
                $("#deleteConfirmButton").attr("href", deleteUrl); // modal içindeki Sil düğmesinin URL'sini güncelleriz
                $("#confirmDeleteModal").modal("show"); // modalı gösteririz
            });
        });
    </script>
}
